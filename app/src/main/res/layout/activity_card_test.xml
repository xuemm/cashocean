<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.find.CardTestActivity">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:text="@string/card_test_hint"
                android:textColor="#ff05231e"
                android:textSize="13sp" />

            <TextView
                style="@style/Style_Text_Size_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="@string/please_take_card"
                android:textColor="@color/cash_mall_text_color_dark" />

            <ImageView
                android:id="@+id/im_identity_id_car_photo"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="14dp"
                android:scaleType="centerInside"
                android:src="@mipmap/id_card" />


            <TextView
                style="@style/Style_Text_Size_14sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="@string/please_take_face"
                android:textColor="@color/cash_mall_text_color_dark" />

            <ImageView
                android:id="@+id/im_face_photo"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="14dp"
                android:scaleType="centerInside"
                android:src="@mipmap/face_photo" />

            <TextView
                android:id="@+id/tv_card_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/shape_green_btn_bg"
                android:gravity="center"
                android:text="Begin to check"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffffff"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>