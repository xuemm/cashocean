<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.find.CardTestFailActivity">

    <include layout="@layout/title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@mipmap/icon_card_no_pass" />

    <LinearLayout
        android:id="@+id/ll_to_loan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cardtest_no_pass_hint"
            android:textColor="@color/color_black"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_upload_again"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/shape_green_btn_bg"
        android:gravity="center"
        android:text="@string/upload_again"
        android:textColor="#ffffffff"
        android:textSize="13sp" />
</LinearLayout>