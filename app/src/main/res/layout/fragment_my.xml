<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_bg_head"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rectangle_white_box_bg"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container_my_app_list"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Style_Text_Size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/my_app"
                android:textColor="@color/cash_mall_text_color_dark" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="43dp"
                android:src="@mipmap/arrow_right" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/font_black_5" />

        <FrameLayout
            android:id="@+id/container_about_us"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Style_Text_Size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/about_us"
                android:textColor="@color/cash_mall_text_color_dark" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="43dp"
                android:src="@mipmap/arrow_right" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/font_black_5" />


        <FrameLayout
            android:id="@+id/container_exit_login"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Style_Text_Size_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/exit_login"
                android:textColor="@color/cash_mall_text_color_dark" />

            <!--<ImageView-->
            <!--android:layout_width="7dp"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_gravity="center_vertical|right"-->
            <!--android:layout_marginRight="43dp"-->
            <!--android:src="@mipmap/arrow_right" />-->

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/font_black_5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_login"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_circuler_white_bg"
            android:elevation="2dp"
            android:padding="12dp"
            android:src="@mipmap/exit_login" />

        <TextView
            android:id="@+id/tv_hint_login"
            style="@style/Style_Text_Size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="@string/please_login"
            android:textColor="@color/cash_mall_text_color_dark" />


    </LinearLayout>


</RelativeLayout>
