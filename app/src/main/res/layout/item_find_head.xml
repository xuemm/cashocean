<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        style="@style/Style_Text_Size_16sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/app_name"
        android:textColor="@color/cash_mall_text_color_dark"
        android:textStyle="bold" />
    <include layout="@layout/item_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="#fff4f8f7"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_card_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_card_test" />

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/idcard_test"
                android:textColor="@color/color_black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_phone_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_phone_test" />

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/phone_test"
                android:textColor="@color/color_black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>