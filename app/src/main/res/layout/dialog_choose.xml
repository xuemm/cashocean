<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_white_box_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Are you sure you set the bill to paid back?"
            android:textColor="@color/cash_mall_text_color_dark"
            android:textSize="13sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cash_mall_bg" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_agreen_left"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/cash_mall_text_color_dark"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/cash_mall_bg" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_agreen_right"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/cash_mall_text_color_dark"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>