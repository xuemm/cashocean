<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/color_transparent"
            android:scaleType="center"
            android:src="@mipmap/arrow_back" />

        <TextView
            style="@style/Style_Text_Size_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/about_us"
            android:textColor="@color/cash_mall_text_color_dark"
            android:textStyle="bold" />


    </FrameLayout>

    <TextView
        style="@style/Style_Text_Size_12sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/shape_rectangle_white_box_bg"
        android:padding="15dp"
        android:text="@string/about_us_desc"
        android:textColor="@color/cash_mall_text_color_dark" />


</LinearLayout>